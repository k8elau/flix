<a href="../shows">Back</a>

{{#if user}}
<button id="favorite" onclick="favorite()">Favorite!</button>
{{else}}
<button id="favorite" disabled>You must be logged in to favorite!</button>
{{/if}}

{{#each shows}}
    <div id="wrapper">
    <div id="show_slug" class="col-md-4">
        <h1 id="showname">{{show_name}} ({{year_released}})</h1>
        {{#if imageFilename}}
            <img src="/uploads/{{imageFilename}}" width="100%" height="100%">
        {{/if}}
   </div>  
    <div id="description" class="col-md-8">
        <h1>DESCRIPTION:</h1>
        {{description}}
    </div>
</div>

<div id="comments" class="col-md-8">

{{#if user}}
    {{#each comments}}
    {{user.username}}
    This should be a comment: {{text}}
    Posted on: {{posted}}
    {{/each}}
{{else}}
    {{#each comments}}
    This should be a comment: {{text}}
    Posted on: {{posted}}
    {{/each}}
{{/if}}
    
</div>

{{/each}}

{{#if user}}
    {{#each shows}}
    <form action="/shows/{{slug}}" method="post">
        <fieldset enabled>
       <textarea type="text" name="text" class="form-control" rows="4"></textarea>
       <input type="submit">
        </fieldset>
    </form>
    {{/each}}
{{else}}
 {{#each shows}}
    <form action="/shows/{{slug}}" method="post">
        <fieldset disabled>
       <textarea type="text" name="text" class="form-control" rows="4">You must be logged in to comment!</textarea>
       <input type="submit">
        </fieldset>
    </form>
 {{/each}}
{{/if}}
